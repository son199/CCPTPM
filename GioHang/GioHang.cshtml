
@using LapTop.Models
@model List<Giohang>
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/Layout.cshtml";
} <h2 style="text-align:center">THÔNG TIN GIỎ HÀNG</h2>
<table class="table table-striped">
    <tr style="text-align:center; font-weight:bold">
        <td>  Mã Hàng  </td>
        <td> Tên Hàng  </td>
        <td> Hinh Ảnh </td>
        <td> Số lượng </td>
        <td> Đơn giá </td>
        <td> Thành tiền </td>
        <td width="50px"></td>
        <td width="50px"></td>
        <td width="50px"></td>
    </tr>
    @foreach (var item in Model)
    {
        <tr style="text-align:center; font-weight:bold">
            <td> @item.iMahang </td>
            <td> @item.sTenhang</td>
            <td><img src="~/image_product/@item.sAnhbia"></td>
            @using (Html.BeginForm("CapnhatGiohang", "Giohang", new { @iMaSp = item.iMahang }))
            {
                <td>
                    <input type="number" min="1" name="txtSoluong" value="@item.iSoluong" class="form-control"/>
                </td>
                <td>@String.Format("{0:0,0}", item.dDongia) </td>
                <td>@String.Format("{0:0,0}", item.dThanhtien) </td>
                <td> <a href="/TrangChu/ChiTiet?masp=@item.iMahang">Chi tiết</a></td>
                <td> @Html.ActionLink("Xóa", "XoaGiohang", new { @iMaSp = item.iMahang })</td>
                <td> <input type="submit" value="Cập Nhật" class="btn btn-primary"/></td>
            }
        </tr>
    }
    <tr style="font-weight: bold; text-align:right; color:red">
        <td colspan="4"> Số lượng sản phẩm: @ViewBag.Tongsoluong </td>
        <td colspan="5"> Tổng tiền: @String.Format("{0:0,0}", ViewBag.Tongtien) VNĐ </td>
    </tr>
    <tr style="font-weight: bold; color:blue; text-align:right ">
        <td colspan="9">
            @Html.ActionLink("Xóa Giỏ Hàng", "XoaTatcaGiohang", new { @class="btn btn-success"})
        </td>
    </tr>
    <tr style="font-weight: bold; color:blue; text-align:right ">
        <td colspan="9" align="center">
            @Html.ActionLink("ĐẶT HÀNG", "Dathang", "GioHang")
        </td>
    </tr>
</table>

